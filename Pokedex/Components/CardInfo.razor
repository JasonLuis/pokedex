   </div>
</div>

@code {

    private string _classCard => new CssBuilder()
                                    .AddClass("w-[344px]")
                                    .AddClass("h-[196px]")
                                    .AddClass("shadow-card-info")
                                    .AddClass("rounded-[20px]")
                                    .AddClass("bg-[#77B35B]")
                                    .Build();


    private string _classPokemonType => new CssBuilder()
                                    .AddClass("text-white")
                                    .AddClass("font-['Inter']")
                                    .AddClass("text-[9px]")
                                    .AddClass("not-italic")
                                    .AddClass("font-[500]")
                                    .AddClass("leading-normal")
                                    .AddClass("flex items-center justify-center")
                                    .Build();

    private string _className => new CssBuilder()
                            .AddClass("text-white")
                            .AddClass("font-['Kumbh Sans']")
                            .AddClass("text-[27px]")
                            .AddClass("not-italic")
                            .AddClass("font-[700]")
                            .AddClass("leading-normal")
                            .Build();


    private string _classDescription => new CssBuilder()
                    .AddClass("text-white")
                    .AddClass("font-['Kumbh Sans']")
                    .AddClass("text-[13px]")
                    .AddClass("not-italic")
                    .AddClass("font-[400]")
                    .AddClass("leading-normal")
                    .Build();

    private string _classBtn => new CssBuilder()
                    .AddClass("w-[87px] h-[28px]")
                    .AddClass("rounded-[50px]")
                    .AddClass("bg-[#BFC66B]")
                    .AddClass("text-white")
                    .AddClass("text-[9px]")
                    .AddClass("font-[500]")
                    .AddClass("not-italic")
                    .AddClass("leading-normal")
                    .Build();
}