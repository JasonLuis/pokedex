@using BlazorComponentUtilities

<div class="@_classCard">
    <div class="w-full flex justify-between pl-4 pr-5">
        <div class="flex gap-2 pt-4">
            <div class="w-[50px] h-[21px] bg-[#BFC66B] rounded-[50px] @_classPokemonType">
                Grass
           </div>
            <div class="w-[50px] h-[21px] bg-[#BFC66B] rounded-[50px] @_classPokemonType">
                Poison
           </div>
       </div>
        <div class="text-white font-[700] font-['Kumbh Sans'] font-[700] not-italic text-[15px] leading-normal pt-[15px] flex items-center ">
           #001
       </div>
   </div>
   <div class="flex h-full pr-[13px]">
        <div class="pl-4">
            <h3 class="@_className">Bulbasaur</h3>
            <p class="@_classDescription mt-1">A strange seed was planted on its back at birth. the plant sprouts and grows with this pokémon.</p>
            <button class="@_classBtn mt-3" style="cursor:pointer">
                Know more
            </button>
        </div>

